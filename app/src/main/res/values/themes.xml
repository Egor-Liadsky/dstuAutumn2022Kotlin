<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MainText">
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">@font/qanelas</item>
    </style>

    <style name="RegistrationText">
        <item name="android:textColor">@color/blue_reg</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/qanelas</item>
    </style>

    <!-- EditText -->
    <style name="EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:fontFamily">@font/qanelas </item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:backgroundTint">@null</item>
    </style>


    <!-- BLOCKS -->
    <style name="blockMain">
        <item name="android:background">@drawable/block_corners</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:alpha">0.20</item>
    </style>

    <!-- ACTION BAR -->
    <style name="actionBar">
        <item name="android:background">@color/blue_reg</item>
        <item name="titleTextColor">@color/white</item>
        <item name="titleTextAppearance">@style/titleStyle</item>

    </style>

    <style name="titleStyle">
        <item name="android:fontFamily">@font/qanelas</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

</resources>

