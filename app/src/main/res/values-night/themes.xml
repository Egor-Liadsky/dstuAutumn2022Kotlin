<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->

        <item name="android:statusBarColor">@color/green_white</item>
        <item name="android:navigationBarColor">@color/green_white</item>

        <item name="itemTextAppearanceActive">@style/fontStyle</item>
        <item name="itemTextAppearanceInactive">@style/fontStyle</item>

    </style>

    <style name="fontStyle">
        <item name="android:fontFamily">@font/qanelas</item>
    </style>

    <style name="imageButton">
        <item name="android:foreground">@drawable/pressedbtnnext_night</item>
        <item name="android:background">@drawable/btn_next_night</item>
    </style>

    <!-- ActivityMain -->
    <style name="activityMain">
        <item name="android:background">@drawable/background_night</item>
    </style>

    <!--  NAVIGATION  -->
    <style name="nav">
        <item name="android:gravity">center</item>
        <item name="android:background">@color/green_reg</item>
        <item name="android:layout_height">60dp</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- TextView -->
    <style name="MainText">
        <item name="android:textColor">@color/green_auth</item>
        <item name="android:fontFamily">@font/qanelas</item>
    </style>

    <style name="RegistrationText">
        <item name="android:textColor">@color/green_reg</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/qanelas</item>
    </style>

    <!-- EditText -->
    <style name="EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:fontFamily">@font/qanelas </item>
        <item name="android:background">@drawable/edittext_background_night</item>
        <item name="android:backgroundTint">@null</item>
    </style>


    <!-- BLOCKS -->
    <style name="blockMain">
        <item name="android:background">@drawable/block_corners</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:alpha">0.20</item>
    </style>

    <!-- ACTION BAR -->
    <style name="actionBar">
        <item name="android:background">@color/green_reg</item>
        <item name="titleTextColor">@color/white</item>
        <item name="titleTextAppearance">@style/titleStyle</item>

    </style>

    <style name="titleStyle">
        <item name="android:fontFamily">@font/qanelas</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="blockSettings">
        <item name="android:background">@drawable/edittext_background_night</item>
    </style>

    <style name="changeThemeButton">
        <item name="android:fontFamily">@font/qanelas</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/border_button</item>
    </style>


    <style name="fub">
        <item name="android:backgroundTint">@color/green_reg</item>
    </style>

</resources>
